<div class="container">
    <%= form_with model: @user, url: mypage_path, method: :patch, local: false do |f| %>
        <% if @field == "name" %>
            <%= f.label :name, "新しいニックネーム" %>
            <%= f.text_field :name %>
        <% elsif @field == "email" %>
            <%= f.label :email, "新しいメールアドレス" %>
            <%= f.email_field :email %>
        <% elsif @field == "password" %>
            <%= f.label :password, "新しいパスワード" %>
            <%= f.password_field :password %><br>
            <%= f.label :password_confirmation, "パスワード確認" %>
            <%= f.password_field :password_confirmation %>
        <% end %>

        <%= f.submit "更新する" %>
    <% end %>
</div>