<div class="container">
    <% if notice %>
        <p class="notice"><%= notice %></p>
    <% end %>

    <% @posts.each do |post| %>
        <div>
            <h2><%= link_to post.title, post_path(post) %></h2>
            <p><%= truncate(post.body, length: 100) %></p>
        </div>
    <% end %>

    <% if current_user&.admin? %>
        <%= link_to "新規投稿", new_post_path, class: "btn btn-primary" %>
    <% end %>
</div>
